{
  "name": "roboratory-lab",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "bootstrap": "pnpm install --recursive",
    "pkg:build": "pnpm -r --filter ./packages/* run build",
    "api:dev": "pnpm --filter ./apps/api-node dev",
    "start:api": "pnpm --filter ./apps/api-node start",
    "test": "pnpm -r test",
    "test:packages": "pnpm -r --filter ./packages/* test",
    "test:apps": "pnpm -r --filter ./apps/* test",
    "lint": "echo \"No linter configured\" && exit 0",
    "bootstrap:admin": "npx ts-node scripts-once/bootstrap-admin.ts",
    "aiapitest": "ts-node scripts-once/tests/test-real-api.ts"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.0.0",
    "firebase-admin": "^12.0.0",
    "sqlite3": "^5.1.7",
    "pg": "^8.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "@types/sqlite3": "^3.1.8",
    "@types/pg": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^3.12.8",
    "typescript": "^5.2.2"
  }
}
